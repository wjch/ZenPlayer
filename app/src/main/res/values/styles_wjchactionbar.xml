<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="wjchred" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_wjchactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Wjchactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Wjchactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Wjchactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Wjchactionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Wjchactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_wjchactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_wjchactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Wjchactionbar</item>
        
        
    </style>

    <style name="ActionBar.Solid.Wjchactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_wjchactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_wjchactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_wjchactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Wjchactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Wjchactionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_wjchactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Wjchactionbar</item>
    </style>

    <style name="PopupMenu.Wjchactionbar" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_wjchactionbar</item> 
    </style>

    <style name="DropDownListView.Wjchactionbar" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_wjchactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Wjchactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_wjchactionbar</item>
    </style>

    <style name="DropDownNav.Wjchactionbar" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_wjchactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_wjchactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_wjchactionbar</item>
    </style>
    
    <style name="ProgressBar.Wjchactionbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_wjchactionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Wjchactionbar" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_wjchactionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Wjchactionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Wjchactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Wjchactionbar</item>
    </style>

</resources>